---
import PrimaryButton from "../components/PrimaryButton.astro";
// import SecondaryButton from "../components/SecondaryButton.astro";
import Header from "../components/Header.astro";
import "../styles/global.css";
import { gsap } from "gsap";
import Footer from "../components/Footer.astro";
import Checkbox from "../components/Checkbox.astro";
const { title } = Astro.props;
import Milk from "../assets/icons/milk.svg";
---

<script>
  import { gsap } from "gsap";
  console.log("using GSAP: ", gsap.version);
</script>

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- Structured data -->
    <script type="application/ld+json">
      {
        "@context": "http://schema.org/",
        "@type": "LocalBusiness",
        "name": "kær kaffebar",
        "image": "url",
        "priceRange": "$",
        "telephone": "81 61 09 00",
        "url": "http://kaerkaffebar.dk/",
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "Valby Langgade 86C St. Tv. ",
          "addressLocality": "København",
          "addressRegion": "Denmark",
          "postalCode": "2500",
          "addressCountry": "Denmark"
        },
        "openingHoursSpecification": [
          {
            "@type": "OpeningHoursSpecification",
            "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
            "opens": "07:30",
            "closes": "18:00"
          },
          {
            "@type": "OpeningHoursSpecification",
            "dayOfWeek": ["Saturday", "Sunday"],
            "opens": "09:00",
            "closes": "17:00"
          }
        ],
        "sameAs": ["https://www.facebook.com/kaerkaffebar", "https://www.instagram.com/kaerkaffebar/"]
      }
    </script>
  </head>
  <body class="bg-primary">
    <Header />
    <Checkbox Diet="Laktose" Icon={Milk} />
    <slot />
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
