---
// i18n
import { t } from "astro-i18n";

// SVG'er
import LocationIcon from "../../assets/icons/location-icon.svg";
import ClockIcon from "../../assets/icons/clock-icon.svg";
import PeopleIcon from "../../assets/icons/people-icon.svg";

// Komponenter
import Button from "../Button.astro";

// Props der bliver sendt vider til komponenten
const { event, popupId } = Astro.props;
console.log("Cardevent:", event);
---

<article class="flex bg-highlight rounded-medium p-default gap-medium justify-between pin-skadow">
  <div class="flex gap-default">
    <p class="text-secondary text-label"><strong>{event.day} {event.date}</strong></p>
    <div>
      <p class="text-neutral-1 text-label"><strong>{event.club}</strong></p>
      <div class="flex items-start sm:items-center gap-small">
        <LocationIcon />
        <p class="text-neutral-1">{event.location}</p>
      </div>
      <div class="flex items-center gap-small">
        <ClockIcon />
        <p class="text-neutral-1">{event.startTime} - {event.endTime}</p>
      </div>
      <div class="flex items-center gap-small">
        <PeopleIcon />
        <p class="text-neutral-1">{event.participants} {t("deltager")}</p>
      </div>
    </div>
  </div>
  <div class="self-end">
    <Button variant="primary" showArrow={false} ariaLabel="Tilmeld dig lÃ¸beklub" data-open-popup={popupId}>Tilmeld</Button>
  </div>
</article>
