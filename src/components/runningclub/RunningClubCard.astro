---
import LocationIcon from "../../assets/icons/location-icon.svg";
import ClockIcon from "../../assets/icons/clock-icon.svg";
import PeopleIcon from "../../assets/icons/people-icon.svg";
import Button from "../../components/Button.astro";
---

<article class="flex bg-highlight border border-accent rounded-medium p-default justify-between">
  <div class="flex gap-medium sm:gap-large">
    <p class="text-secondary font-body-text text-paragraph"><strong>Dato</strong></p>
    <div class="grid gap-small">
      <p class="text-neutral-1 font-body-text text-paragraph"><strong>Løbeklub</strong></p>
      <div class="flex items-center gap-small">
        <LocationIcon />
        <p class="text-neutral-1 font-body-text text-paragraph-2">Valby Langgade 86C</p>
      </div>
      <div class="flex items-center gap-small">
        <ClockIcon />
        <p class="text-neutral-1 font-body-text text-paragraph-2">09:00 - 10:00</p>
      </div>
      <div class="flex items-center gap-small">
        <PeopleIcon />
        <p class="text-neutral-1 font-body-text text-paragraph-2">7 deltagere</p>
      </div>
    </div>
  </div>
  <div class="self-end sm:self-end">
    <Button variant="secondary" ariaLabel="Tilmeld dig løbeklub">Tilmeld</Button>
  </div>
</article>
